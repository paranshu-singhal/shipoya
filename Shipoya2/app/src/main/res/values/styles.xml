<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:dropDownItemStyle">@style/myDropDownItemStyle</item>
        <item name="android:dropDownListViewStyle">@style/myDropDownListViewStyle</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.StatusTransparent">
        <item name="colorPrimaryDark">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="style_request_truck">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:backgroundTint">@color/dark_grey</item>
        <item name="android:textColorHint">@color/dark_grey</item>
    </style>

    <style name="style_text_homepage">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_editText">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">6dp</item>
    </style>
    <style name="myDropDownListViewStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>
    <style name="myDropDownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
