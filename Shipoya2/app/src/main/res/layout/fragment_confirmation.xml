<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_side_margin"
    android:orientation="vertical"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="@dimen/card_elevation"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="start"
                android:src="@drawable/sidebar_bg"
                app:civ_border_color="@android:color/black"
                app:civ_border_width="1dp" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="Okara Carrier"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/profile_image"
                android:layout_toRightOf="@id/profile_image"
                android:layout_toLeftOf="@+id/textView23"
                android:layout_toStartOf="@+id/textView23"/>

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="275000"
                android:textSize="20sp"
                android:textColor="@color/dark_grey"
                android:drawableLeft="@drawable/rupee_black16"
                android:drawableStart="@drawable/rupee_black16"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/pickup_date"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawablePadding="16dp"
            android:text="10:40 AM 23 MAY 2016"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/payment_terms"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawablePadding="16dp"
            android:text="80% Advance"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/confirmation_await"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_orange"
            android:drawableLeft="@drawable/yellow_circle"
            android:drawableStart="@drawable/yellow_circle"
            android:drawablePadding="16dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Awaiting confirmation from carrier side" />

        <Button
            android:id="@+id/button5"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:enabled="false"
            android:text="@string/awaiting_confirm"
            android:textColor="@drawable/quote_confirm_btn" />
    </LinearLayout>

</android.support.v7.widget.CardView>