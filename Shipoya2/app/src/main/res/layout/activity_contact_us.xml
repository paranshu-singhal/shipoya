<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:scrollbars="none"
    tools:context="com.android.shipoya.shipoya2.ContactUs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_icon_white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold" />

        <View
            android:layout_width="110dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:background="@drawable/under_line" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/boundingbox"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addressShip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="map"
                android:drawableLeft="@drawable/ic_pin_drop_white_24dp"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/ic_pin_drop_white_24dp"
                android:padding="16dp"
                android:text="@string/address_shipoya"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/emailShip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="email"
                android:textColorLink="@color/white"
                android:drawableLeft="@drawable/ic_email_white_24dp"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/ic_email_white_24dp"
                android:padding="16dp"
                android:text="@string/email_shipoya"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/numberShip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="phone"
                android:drawableLeft="@drawable/ic_call_white_24dp"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/ic_call_white_24dp"
                android:padding="16dp"
                android:text="@string/phone_shipoya"
                android:textColorLink="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
