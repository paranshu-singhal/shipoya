<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewTruckType1"
        style="@style/style_request_truck"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:text="Truck type 1" />


    <TextView
        android:id="@+id/textViewTruckType2"
        style="@style/style_request_truck"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:drawableLeft="@drawable/ic_local_shipping_white_24dp"
        android:drawableStart="@drawable/ic_local_shipping_white_24dp"
        android:text="Truck type 2" />
</LinearLayout>